<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/default_bg2_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/driver_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/driver_status_txt"
 />

        <ImageView
            android:id="@+id/normal"
            android:layout_width="280dp"
            android:layout_height="320dp"
            android:layout_marginBottom="41dp"
            android:layout_weight="0.05"
            android:scaleType="fitXY"
            android:src="@drawable/basic_mode"
            android:layout_marginStart="165dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/normal"
            android:layout_alignStart="@+id/imageView6"
            android:scaleType="fitXY"
            android:src="@drawable/circle_btn" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/imageView4"
            android:layout_alignStart="@+id/imageView5"
            android:layout_marginBottom="88dp"
            android:scaleType="fitXY"
            android:src="@drawable/circle_btn" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/normal"
            android:layout_marginStart="102dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/normal"
            android:scaleType="fitXY"
            android:src="@drawable/circle_btn" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignTop="@+id/imageView4"
            android:text="Condition : "
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_alignStart="@+id/textView3"
            android:text="Heart rate : "
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView5"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/imageView5"
            android:text="Fatigue Index : "
            android:textSize="30dp" />

        <TextView
            android:id="@+id/condition_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignStart="@+id/bpm_textView"
            android:text="0 "
            android:textColor="@color/colorBlue"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/bpm_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignStart="@+id/level_textView"
            android:text="0 "
            android:textColor="@color/colorBlue"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/level_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/textView3"
            android:text="0 "
            android:textColor="@color/colorBlue"
            android:textSize="30dp" />


    </RelativeLayout>

</RelativeLayout>
